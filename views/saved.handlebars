<div class="container">
    {{#each article}}
        <div class="card">
            <h3 class="card-header">{{this.title}}</h3>
            <div class="row">
                <div class="col-lg-8 card-block">
                    <p class="card-text">{{this.summary}}</p>
                    <a href="{{this.link}}" target="_blank" class="card-link">Read more</a>
                </div> 

            </div>
        </div>
    {{/each}}
</div>

<div class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content"></div>
    </div>
</div>